<style type="text/css">
html, body{
  text-align: center;
  background-color: #fafafa;
  font-size: 20px;
  color: #333;
}
</style>
</head>
<body>

<div class="main">
  <div class="section" id="root">正しく処理されれば表示されないコンテンツ</div>
</div>

<script type="text/babel">
const MyPage = ( props ) => (
  <div>
    <MyHeader actionLogout={() => window.location.href='/appid/logout'} name={props.name} />
    <ul>
      <li>ID: { props.id }</li>
      <li>Name: { props.name }</li>
      <li>Email: { props.email }</li>
    </ul>
  </div>
)

const MyHeader = ( props ) => {
  const { Button } = MaterialUI;
  return (
  <div style={{textAlign: "right"}}>
    <Button variant="contained" color="primary" onClick={() => props.actionLogout()}>{props.name}</Button>
  </div>
  )
}

ReactDOM.render(
    <MyPage id="<%= profile.sub %>" name="<%= profile.name %>" email="<%= profile.email %>" />,
    document.getElementById( 'root' )
);
</script>

</body>
</html>
